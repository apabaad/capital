<div class ="tile-container">
    <h2 class="section-header__title page-width" id="arisit-division" align="center">{{ section.settings.arisit-image-tile-title }}</h2><br>
    <div class="tile-row">
        {% for block in section.blocks %}
            {% if block.settings.tile-image != blank %}
               
            <div class="tile-item" onclick="window.location='{{ block.settings.tile-url }}';">
                
                <span class = "tile-title"> {{ block.settings.tile-title }} </span>
               <img src={{ block.settings.tile-image | img_url: 'master' }} class="tile-image" loading="lazy">
                <div class="tile-text-container">
                    <div class="tile-text">
                        {{ block.settings.tile-text }}
                    </div>
                </div>
          
            </div>
        
            {% endif %}
        {% endfor %}
    </div>
    </div>

{% schema %}

{
    "name":"Arisit Image Tile",
    "settings":[
        {
        "type":"text",
        "id":"arisit-image-tile-title",
        "label":"Row Title"
    }
    ],
    "blocks":[
        {
        "type":"arisit-images",
        "name":"Image Tile",
        "settings":[
            {
            "type":"image_picker",
            "id":"tile-image",
            "label":"Pick an image"
        },
    {
        "type":"text",
        "id":"tile-title",
        "label":"Tile Title"
    },
    {
        "type":"html",
        "id":"tile-text",
        "label":"Tile Text"
    },
    {
        "type":"url",
        "id":"tile-url",
        "label":"URL"
    }
        ]}
    ],

    "presets": [
        {
        "name":"Arisit Tiles",
        "category":"Image"}
    ]}

{% endschema %}


{% style %}

.arisit-hr-line{
    margin-top:150px;
}
 .tile-container{
     align-items:center;
     max-width:1830px;
     margin: 0 auto;
     margin-bottom:100px;
     margin-top:20px;
 }

 .tile-row{
     margin:0 7% 0 6%;
     display:flex;
     flex-wrap:wrap;
     justify-content: center;
 }

 .tile-item{
    display:flex;
    flex-direction:column;
    height:288px;
    max-width:25%;
    position:relative;
    cursor:pointer;
    margin:20px 20px 0 20px;
    flex: 1 0 21%; 
    border-radius:5%;
    overflow:hidden;
 }

 .tile-image{
     opacity: 1;
     transition: 0.3s ease;
 }

 .tile-title{
    text-align:center;
    text-transform: uppercase;
    font-size:16px;
    color: white;
    background:#008080;
 }

 .tile-text-container{
     position:absolute;
     background: white;
     width:100%;
     bottom:0;
     opacity:0;
     transition: 0.5s ease;
     flex-wrap:wrap;
 }

 .tile-text{
     text-align:justify;
     color:#2F4E82;
     padding:20px;
     opacity:1;
 }

 .tile-item:hover .tile-image {
     opacity: 0.5;
 }

 .tile-item:hover .tile-text-container {
     opacity: 1;
 }

 .tile-item:hover {
    border: 2px solid #E5E5E5;
 }

 @media screen and (max-width:2100px)
 {  
     .tile-item{
        flex:  1 0 21%; 
        margin-right:5px;
     }
 }

 
 @media screen and (max-width:1024px)
 {  
     .tile-item{
        flex:  1 0 21%; 
        margin-right:5px;
     }
 }

 @media screen and (max-width:912px)
 {  
     .tile-item{
        height:auto;
        flex:  1 0 30%; 
        margin-right:5px;
     }
    .tile-title{
        font-size:14px;
    }
    .tile-text{
        font-size:14px;
        padding:5px;
    }
 }

 @media screen and (max-width:820px)
 {  
     .tile-item{
        height:auto;
        max-width:39%;
        flex:  1 0 40%; 
        margin-right:5px;
     }
    .tile-title{
        font-size:14px;
    }
    .tile-text{
        font-size:14px;
        padding:5px;
    }
 }

 @media screen and (max-width:600px)
 {  
     .tile-row{
         margin:0;
     }
     .tile-item{
        height:auto;
        max-width:39%;
        flex:  1 0 40%; 
        margin-right:5px;
     }
    .tile-title{
        font-size:14px;
        text-transform:capitalize;
    }
    .tile-text{
        font-size:14px;
        padding:5px;
    }
 }
 
{% endstyle %}